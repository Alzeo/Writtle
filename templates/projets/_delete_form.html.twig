<form method="post" action="{{ path('projets_delete', {'id': projets.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projets.id) }}">
    <button class="btn btn-danger">Supprimer ce projet</button>
</form>
