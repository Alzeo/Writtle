{% extends 'base.html.twig' %}

{% block title %}Chapitre index{% endblock %}

{% block body %}
    <h1>Chapitre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Date</th>
                <th>Title</th>
                <th>Resume</th>
                <th>IntriguePrincipale</th>
                <th>IntrigureSecondaire</th>
                <th>CharacterRevel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chapitre in chapitres %}
            <tr>
                <td>{{ chapitre.id }}</td>
                <td>{{ chapitre.number }}</td>
                <td>{{ chapitre.date ? chapitre.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ chapitre.title }}</td>
                <td>{{ chapitre.resume }}</td>
                <td>{{ chapitre.intriguePrincipale }}</td>
                <td>{{ chapitre.intrigureSecondaire }}</td>
                <td>{{ chapitre.characterRevel }}</td>
                <td>
                    <a href="{{ path('chapitre_show', {'id': chapitre.id, 'idProjet': projets.id}) }}">show</a>
                    <a href="{{ path('chapitre_edit', {'id': chapitre.id, 'idProjet': projets.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chapitre_new', {'idProjet': idProjet }) }}">Create new</a>
{% endblock %}
